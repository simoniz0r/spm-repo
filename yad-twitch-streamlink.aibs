    # wget --no-verbose --read-timeout=30 "https://launchpad.net/~nilarimogard/+archive/ubuntu/webupd8/+files/streamlink_0.8.1-1~webupd8~xenial0_all.deb" -O "$AIBSIMG_DEPS_DIR"/streamlink.deb
    # wget --no-verbose --read-timeout=30 "https://launchpad.net/~nilarimogard/+archive/ubuntu/webupd8/+files/python-streamlink_0.8.1-1~webupd8~xenial0_all.deb" -O "$AIBSIMG_DEPS_DIR"/python-streamlink.deb
